@model OutfitPlaner_Applcation.Controllers.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/register.css" />
</head>
<body>
    <div class="app-name">
        Планировщик гардероба
    </div>

    <div class="container">
        <div class="register-form">
            <h2 class="form-title">Авторизация</h2>
            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label asp-for="Email" class="control-label required-field">Электронная почта</label>
                    <input asp-for="Email" class="form-control" placeholder="Введите email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="required-field">Пароль</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Введите пароль" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Войти" class="btn btn-primary" />
                </div>

                <div class="auth-link">
                    Нет аккаунта? <a href="/Account/Register">Зарегистрироваться</a>
                </div>
            </form>
        </div>

        <div class="image-container">
            <img src="~/image/icon_register.png" alt="Background Image" class="background-image" />
        </div>
    </div>
</body>
</html>