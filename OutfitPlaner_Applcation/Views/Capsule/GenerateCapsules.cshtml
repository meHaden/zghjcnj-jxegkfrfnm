@using System.Linq
@model List<OutfitPlaner_Applcation.Models.Clothing>
@{
    ViewData["Title"] = "Капсульный гардероб";
    Layout = null;
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/capsule.css" />
    
</head>
<body>

    <div class="burger-menu">
        <input type="checkbox" id="menu-toggle" />
        <label for="menu-toggle" class="menu-icon">&#9776;</label>
        <nav class="menu">
            <ul>
                <li><a href="/ProfileWardrobe/MyProfile" title="Мой Профиль"><i class="fas fa-user"></i></a></li>
                <li><a href="/Favorite/Favorite" title="Избранное"><i class="fa fa-thumbs-up"></i></a></li>
                <li><a href="/ProfileWardrobe/MyWardrobe" title="Мой Гардероб"><i class="fas fa-tshirt"></i></a></li>
                <li><a href="/CapsuleWardrobe/CapsuleWardrobe" title="Капсульный Гардероб"><i class="fas fa-suitcase"></i></a></li>
                <li><a href="/CapsuleWardrobe/ThematicCapsule" title="Тематическая капсула"><i class="fas fa-palette"></i></a></li>
            </ul>
        </nav>
    </div>

    <div class="back-to-home">
        <a href="/" class="btn-home"><i class="fas fa-home"></i> На главную</a>
    </div>

    <div class="content">
        <div class="text-center">
            <h1 class="display-4">Создание капсульного гардероба</h1>
            <button id="showClothesBtn" class="btn-home" style="margin-bottom: 20px;">
                <i class="fas fa-tshirt"></i> Показать мои вещи
            </button>

            <div id="clothingContainer" style="display: none;">
                @if (Model?.Any() == true)
                {
                    <div class="clothing-grid">
                        @foreach (var item in Model)
                        {
                            <div class="clothing-item">
                                <div class="clothing-img-container">
                                    <img src="@item.ImageUrl" alt="@item.Type" class="clothing-img">
                                </div>
                                <div class="clothing-basic-info">
                                    <p class="clothing-type">@item.Type</p>
                                    <p class="clothing-color">
                                        <span class="color-badge" style="background-color: @item.Color"></span>
                                        @item.Color
                                    </p>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p>Ваш гардероб пуст</p>
                }
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const menuToggle = document.getElementById('menu-toggle');
            const menu = document.querySelector('.menu');
            const showClothesBtn = document.getElementById('showClothesBtn');
            const clothingContainer = document.getElementById('clothingContainer');

            // Показать/скрыть одежду
            showClothesBtn.addEventListener('click', function() {
                clothingContainer.style.display =
                    clothingContainer.style.display === 'none' ? 'block' : 'none';
            });

            // Закрытие меню при клике вне его области
            document.addEventListener('click', function(event) {
                if (!menu.contains(event.target) &&
                    event.target !== document.querySelector('.menu-icon') &&
                    event.target !== menuToggle) {
                    menuToggle.checked = false;
                }
            });
        });
    </script>
</body>
</html>