@{
    ViewData["Title"] = "Капсульный гардероб";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/capsule.css" />
    
</head>
<body>

    <div class="burger-menu">
        <input type="checkbox" id="menu-toggle" />
        <label for="menu-toggle" class="menu-icon">&#9776;</label>
        <nav class="menu">
            <ul>
                <li><a href="/ProfileWardrobe/MyProfile" title="Мой Профиль"><i class="fas fa-user"></i></a></li>
                <li><a href="/Favorite/Favorite" title="Избранное"><i class="fa fa-thumbs-up"></i></a></li>
                <li><a href="/ProfileWardrobe/MyWardrobe" title="Мой Гардероб"><i class="fas fa-tshirt"></i></a></li>
                <li><a href="/CapsuleWardrobe/CapsuleWardrobe" title="Капсульный Гардероб"><i class="fas fa-suitcase"></i></a></li>
                <li><a href="/CapsuleWardrobe/ThematicCapsule" title="Тематическая капсула"><i class="fas fa-palette"></i></a></li>
            </ul>
        </nav>
    </div>

    <div class="back-to-home">
        <a href="/" class="btn-home"><i class="fas fa-home"></i> На главную</a>
    </div>

    <div class="content">
        <div class="text-center">
            <h1 class="display-4">Добро пожаловать!</h1>
            <p>Здесь вы можете создать свой капсульный гардероб</p>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const menuToggle = document.getElementById('menu-toggle');
            const menu = document.querySelector('.menu');

         
            document.addEventListener('click', function(event) {
                if (!menu.contains(event.target) &&
                    event.target !== document.querySelector('.menu-icon') &&
                    event.target !== menuToggle) {
                    menuToggle.checked = false;
                }
            });
        });
    </script>
</body>
</html>